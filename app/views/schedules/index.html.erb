<p id="notice"><%= notice %></p>

<h1>自分のスケジュール</h1>

<table>
  <thead>
    <tr>
      <th>タイトル</th>
      <th>時間</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schedules.each do |schedule| %>
      <tr>
        <td><%= schedule.title %></td>
        <td><%= schedule.start_time.strftime("%Y-%m-%d %H:%M") %></td>
        <td><%= link_to '詳細', schedule %></td>
        <td><%= link_to '編集', edit_schedule_path(schedule.id) %></td>
        <td><%= link_to '削除',schedule_path(schedule.id), method: :delete, data: { confirm: "予定を削除しますか？" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '予定を入れる', new_schedule_path %>
<%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
<%= link_to '部署スケジュール', department_path(current_user.department_id) %>


<%= month_calendar events: @schedules do |date, schedules| %>
  <%= date.day %>

  <% schedules.each do |schedule| %>
    <div>
      <%= link_to schedule.title, schedule %>
    </div>
  <% end %>
<% end %>
